@using MVCSmallFarm.ViewModels
@model RemoveRoleFromUserViewModel

@{
    ViewData["Title"] = "Delete Role";
}

<h2 class="alert alert-danger">Delete the role of users</h2>
<div class="container col-md-4">
    <div class="card bg-danger text-light">
        <div class="card-header">
            All User Roles
        </div>
        <div class="card-body bg-dark text-light">
            <form asp-controller="Admin" asp-action="RemoveRoleFromUser">
                <input asp-for="UserId" type="hidden"/>
                @{
                    if (Model.Roles != null) 
                    { 
                        string[] userRole = Model.Roles.Split(',');
                        <ul>
                            @foreach (var item in userRole)
                            {
                                <li>@item</li>
                            }
                        </ul>
                    }
                }
                <div class="form-group">
                    <button type="submit" class="btn btn-outline-danger float-end m-2">Delete</button>
                </div>
            </form>
        </div>
    </div>
</div>