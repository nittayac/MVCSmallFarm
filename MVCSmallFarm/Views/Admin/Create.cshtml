@using MVCSmallFarm.ViewModels
@model RegisterViewModel

@{
    ViewData["Title"] = "Add new user";
}

<div class="container">
    <div class="card col-md-4 text-dark">
        <div class="card-header bg-success text-light">
            Add new user
        </div>
        <div class="card-body">
            <form asp-controller="Admin" asp-action="Create">
                <div class="text-danger" asp-validation-summary="All"></div>
                <div>
                    <div class="form-group">
                        <label asp-for="Email"></label>
                        <input asp-for="Email" class="form-control"/>
                        <span class="text-danger" asp-asp-validation-for="Email"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password"></label>
                        <input asp-for="Password" class="form-control" />
                        <span class="text-danger" asp-asp-validation-for="Password"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PasswordAgain"></label>
                        <input asp-for="PasswordAgain" class="form-control" />
                        <span class="text-danger" asp-validation-for="PasswordAgain"></span>
                    </div><hr />
                    <div class="form-group">
                        <div class="float-end">
                            <button type="submit" class="btn btn-outline-success">Register</button>
                            <button type="submit" class="btn btn-outline-danger" asp-action="Index">Cancel</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
