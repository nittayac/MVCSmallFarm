@using MVCSmallFarm.ViewModels
@model RegisterViewModel

@{
    ViewData["Title"] = "Register";
} 

@if (User.Identity.IsAuthenticated)
{
    <div class="alert alert-primary"> Hello @User.Identity.Name</div>
}
else
{ 
    <div class="col d-flex justify-content-center mt-4">
        <div class="card bg-dark border-light text-light col-md-4">
            <div class="card-header bg-secondary text-light">
                Register
            </div>
            <div class="card-body">
                <form asp-controller="Account" asp-action="Register">
                    <div calss="text-danger" asp-validation-summary="All">
                        <div class="form-group">
                            <label asp-for="Email"></label>
                            <input asp-for="Email" class="form-control" />
                            <span class="text-danger" asp-validation-for="Email"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Password"></label>
                            <input asp-for="Password" class="form-control" />
                            <span class="text-danger" asp-validation-for="Password"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="PasswordAgain"></label>
                            <input asp-for="PasswordAgain" class="form-control" />
                            <span class="text-danger" asp-validation-for="PasswordAgain"></span>
                        </div><hr/>
                        <div class="form-group">
                            <div class="float-end">
                                <button type="submit" class="btn btn-outline-light">Register</button>
                                <button type="submit" class="btn btn-outline-danger" asp-action="Index">Cancel</button>
                            </div>
                        </div>
                    </div>

                </form>
            </div>
        </div>

    </div>
}