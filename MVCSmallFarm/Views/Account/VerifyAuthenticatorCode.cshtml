@using MVCSmallFarm.ViewModels
@model VerifyAuthenticatorCodeViewModel
<h1>Confirm Code from  Authenticator Apps</h1>
<form asp-controller="Account" asp-action="VerifyAuthenticatorCode">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Code"  class="col-md-2"></label>
        <input asp-for="Code" class="form-control"/>
        <span asp-validation-for="Code" class="text-danger"></span>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-outline-warning mt-2">Submit</button>
    </div>
</form>