@model MVCSmallFarm.Models.ApplicationUsers


<form asp-controller="Member" asp-action="Edit" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <div class="container">
        <div class="row">
            <div class="col-md-4 mt-1">
                <div class="card-body">
                    <div class="col d-flex justify-content-center">
                        @if (string.IsNullOrEmpty(Model.ImgUrl))
                        {
                            <img class="img" src="@Url.Content("~/img/nopic.png")" width="140" height="180" />
                        }
                        else
                        {
                            <img class="img" src="@Url.Content("~/img/" + @Model.ImgUrl)" width="140" height="180" />
                        }
                    </div>
                </div>
            </div>

            <div class="col-md-5 mt-1">
                <div class="card">
                    <div class="card-header bg-primary text-light">
                        ข้อมูลสมาชิก
                    </div>
                    <div class="card-body text-dark">
                        <div class="form-group">
                            <label asp-for="ImgUrl">Upload File :</label>
                            <input asp-for="ImgUrl" type="file" name="files" class="form-control" />
                        </div>

                        <div class="form-group">
                            <label asp-for="FullName" class="control-label"></label>
                            <input asp-for="FullName" class="form-control" />
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Address" class="control-label"></label>
                            <textarea asp-for="Address" rows="3" class="form-control"></textarea>
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="BirthDate" class="control-label"></label>
                            <input type="date" asp-for="BirthDate" class="form-control" />
                            <span asp-validation-for="BirthDate" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="PhoneNumber" class="control-label"></label>
                            <input asp-for="PhoneNumber" class="form-control" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div><hr />

                        <div class="form-group">
                            <button type="submit"
                                    onclick="return confirm('คุณต้องการแก้ไขข้อมูลสมาชิก ใช่หรือไม่?')"
                                    class="btn btn-outline-success">
                                บันทึก
                            </button>
                            <div class="float-end">
                                <a class="btn btn-outline-primary"
                                   asp-controller="Member"
                                   asp-action="Index">
                                    หน้า Profile
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>


</form>